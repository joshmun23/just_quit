<% if @user.smokes.any? %>
  <section id="cost-container">
    <section id="cost-today">
        <h4>You've smoked $<%= @user.smoke_cost('daily') %> worth of cigarettes today</h4>
        <br>
        <h4><%= @user.fetch_smoke_records_count('daily') %> cigarettes have taken <%= @user.health_cost('daily') %> minutes off your life</h4>
    </section>

    <section id="cost-all-time">
        <h4>Since <%= "#{@user.smokes.first.created_at.month}/#{@user.smokes.first.created_at.day}/#{@user.smokes.first.created_at.year}" %>, you've smoked $<%= @user.smoke_cost('all-time') %> worth of cigarettes</h4>
        <br>
        <h4><%= @user.fetch_smoke_records_count('all-time') %> cigarettes have taken <%= @user.health_cost('all-time') %> minutes off your life</h4>
    </section>
  </section>
<% end %>
